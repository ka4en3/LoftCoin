<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoftCoin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_six</item>
        <item name="colorPrimaryVariant">@color/dark_seven</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">?android:attr/colorPrimary</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="buttonWelcome">@style/Widget.Theme.LoftCoin.Button.Welcome</item>
        <!--Redefine attributes *HeadlineX -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Theme.LoftCoin.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Theme.LoftCoin.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Theme.LoftCoin.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Theme.LoftCoin.H4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Theme.LoftCoin.H5</item>

        <item name="walletCardWidth">240dp</item>
        <item name="walletCardHeight">160dp</item>
        <item name="walletCardBackground">@color/dark_five</item>

        <item name="toolbarStyle">@style/Theme.LoftCoin.ToolBarOverlay</item>

        <item name="materialAlertDialogTheme">@style/Theme.LoftCoin.AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/Theme.LoftCoin.BottomSheetDialog</item>
        <item name="bottomNavigationStyle">@style/Theme.LoftCoin.BottomNavigationView</item>

        <item name="percentNegative">@color/watermelon</item>
        <item name="percentPositive">@color/weird_green</item>
    </style>


</resources>